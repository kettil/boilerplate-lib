{
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },
  "preset": "ts-jest",
  "testMatch": ["**/*.test.{js,jsx,ts,tsx}"],
  "collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}"],
  "coverageReporters": ["text", "lcov"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": -5
    }
  },
  "modulePathIgnorePatterns": ["<rootDir>/build"]
}
